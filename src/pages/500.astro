---
import Layout from '../layouts/Layout.astro'

interface Props {
  error: unknown
}
const { error } = Astro.props
---

<Layout title="Error" description=`There was an error: ${error}`>
    <p>You have an enounted an unexpected error. Please contact me to inform me about the error. Thanks! </p>
    <p>{error instanceof Error ? error.message : 'Unknown error'}</p>
</Layout>