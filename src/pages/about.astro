import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";

import GitHubIcon from "../images/icons/github-mark-white.svg";
import EmailIcon from "../images/icons/google-icon-email.svg";
import TwitterIcon from "../images/icons/x-twitter-icon.svg";
import LinkedInIcon from "../images/icons/LinkedInIcon.png";

---

